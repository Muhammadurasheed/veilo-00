# Database
MONGODB_URI=mongodb://localhost:27017/veilo

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_2=http://127.0.0.1:5173

# Agora Configuration (for live audio features)
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# Admin User Creation (for initial setup)
ADMIN_EMAIL=admin@veilo.com
ADMIN_PASSWORD=Admin123!@#
ADMIN_ALIAS=Veilo Admin

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional Features
ENABLE_FILE_LOGGING=false
REDIS_URL=redis://localhost:6379